myModule = angular.module('myModule', ['ui.boostrap','ngRoute','ngResource']);

myModule.config(function($routeProvider, $loctionProvider){
	$loctionProvider.html5Mode(true);
	$routeProvider

	.when("/students/new", {
		templateUrl: "<%= asset_path('students/new.html.erb') %>"
	})
})
myModule.controller("StudentsNewCtrl", function($scope, studentResource) {
  $scope.student = new studentResource();
});